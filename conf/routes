GET     /                               controllers.Application.index

GET     /api/arena                      controllers.Api.arena
POST    /api/training                   controllers.Api.training
POST    /api/:gameId/:token/play        controllers.Api.move(gameId: String, token: String)

GET     /register                       controllers.User.registerForm
POST    /register                       controllers.User.register
GET     /user/:id                       controllers.User.show(id: String)
GET     /user                           controllers.User.list

GET     /test                           controllers.Application.test

GET     /events/$id<[\w]{8}>            controllers.Application.gameEvents(id: String)

GET     /$id<[\w]{8}>                   controllers.Application.visualization(id: String)

GET     /assets/*file                   controllers.Assets.at(path="/public", file)
